<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/punto"
        android:layout_width="@dimen/ancho"
        android:layout_height="@dimen/alto"
        android:text="."
        android:background="#48bfed"
        android:textColor="#ffffff"
        android:textSize="@dimen/texto"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"/>
    <TextView
        android:id="@+id/cero"
        android:layout_width="@dimen/ancho"
        android:layout_height="@dimen/alto"
        android:text="0"
        android:background="#48bfed"
        android:textColor="#ffffff"
        android:textSize="@dimen/texto"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_toRightOf="@id/punto"
        android:layout_alignParentBottom="true"/>
    <TextView
        android:id="@+id/igual"
        android:layout_width="@dimen/ancho"
        android:layout_height="@dimen/alto"
        android:text="="
        android:background="#48bfed"
        android:textColor="#ffffff"
        android:textSize="@dimen/texto"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_toRightOf="@id/cero"
        android:layout_alignParentBottom="true"/>
    <TextView
        android:id="@+id/uno"
        android:layout_width="@dimen/ancho"
        android:layout_height="@dimen/alto"
        android:text="1"
        android:background="#48bfed"
        android:textColor="#ffffff"
        android:textSize="@dimen/texto"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_above="@id/punto"/>

    <TextView
        android:id="@+id/dos"
        android:layout_width="@dimen/ancho"
        android:layout_height="@dimen/alto"
        android:text="2"
        android:background="#48bfed"
        android:textColor="#ffffff"
        android:textSize="@dimen/texto"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_above="@id/cero"
        android:layout_toRightOf="@+id/uno"/>

    <TextView
        android:id="@+id/tres"
        android:layout_width="@dimen/ancho"
        android:layout_height="@dimen/alto"
        android:text="3"
        android:background="#48bfed"
        android:textColor="#ffffff"
        android:textSize="@dimen/texto"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_above="@id/igual"
        android:layout_toRightOf="@+id/dos"/>

    <TextView
        android:id="@+id/cuatro"
        android:layout_width="@dimen/ancho"
        android:layout_height="@dimen/alto"
        android:text="4"
        android:background="#48bfed"
        android:textColor="#ffffff"
        android:textSize="@dimen/texto"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_above="@id/uno"/>

    <TextView
        android:id="@+id/cinco"
        android:layout_width="@dimen/ancho"
        android:layout_height="@dimen/alto"
        android:text="5"
        android:background="#48bfed"
        android:textColor="#ffffff"
        android:textSize="@dimen/texto"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_above="@id/dos"
        android:layout_toRightOf="@+id/cuatro"/>

    <TextView
        android:id="@+id/seis"
        android:layout_width="@dimen/ancho"
        android:layout_height="@dimen/alto"
        android:text="6"
        android:background="#48bfed"
        android:textColor="#ffffff"
        android:textSize="@dimen/texto"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_above="@id/tres"
        android:layout_toRightOf="@+id/cinco"/>

    <TextView
        android:id="@+id/siete"
        android:layout_width="@dimen/ancho"
        android:layout_height="@dimen/alto"
        android:text="7"
        android:background="#48bfed"
        android:textColor="#ffffff"
        android:textSize="@dimen/texto"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_above="@id/cuatro"/>

    <TextView
        android:id="@+id/ocho"
        android:layout_width="@dimen/ancho"
        android:layout_height="@dimen/alto"
        android:text="8"
        android:background="#48bfed"
        android:textColor="#ffffff"
        android:textSize="@dimen/texto"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_above="@id/cinco"
        android:layout_toRightOf="@+id/siete"/>

    <TextView
        android:id="@+id/dos"
        android:layout_width="@dimen/ancho"
        android:layout_height="@dimen/alto"
        android:text="2"
        android:background="#48bfed"
        android:textColor="#ffffff"
        android:textSize="@dimen/texto"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_above="@id/cero"
        android:layout_toRightOf="@+id/uno"/>
</RelativeLayout>